nvals=0
i=xi
while(i<=xf)
  j=yi
  while (j<=yf)
    'set x 'i
    'set y 'j
    'd 'fild''
    res=subwrd(result,4)
* by default, include new value into list
    ok=1
* loop over the list and check to see if it is already included
    k=1
    while (k<=nvals)

*  if values is include, set ok to false (0)
      if (_mapval.k=res) 
        ok=0
      endif
      k=k+1
    endwhile

* if this is a new value, than include in list
    if (ok)
      nvals=nvals+1
      _mapval.nvals=res
say res
    endif
    j=j+1
  endwhile
  i=i+1
endwhile

'set x 'xi' 'xf''
'set y 'yi' 'yf''

**********************************************************************
* sort values from low to high (using buble sort)
**********************************************************************
max=nvals
while (max!=1)
  i=1
  j=2
  while (j<=max)
    if (_mapval.i > _mapval.j)
      temp=_mapval.i
      _mapval.i=_mapval.j
      _mapval.j=temp
    endif
    i=j
    j=j+1
  endwhile
  max=max-1
endwhile

return nvals




