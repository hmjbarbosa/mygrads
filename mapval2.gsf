function mapval(args)

fild=subwrd(args,1)
loni=subwrd(args,2)
lonf=subwrd(args,3)
lati=subwrd(args,4)
latf=subwrd(args,5)

**********************************************************************
* find region in grid coordinates
**********************************************************************
if (loni!='' & lonf!='' & lati!='' & latf!='')
  'set lon 'loni' 'lonf
  'set lat 'lati' 'latf
endif

'q dims'
lin=sublin(result,2)
if (subwrd(lin,3)='fixed')
  xi=subwrd(lin,9)
  xf=xi
else
  xi=subwrd(lin,11)    
  xf=subwrd(lin,13)    
endif
lin=sublin(result,3)
if (subwrd(lin,3)='fixed')
  yi=subwrd(lin,9)
  yf=yi
else
  yi=subwrd(lin,11)    
